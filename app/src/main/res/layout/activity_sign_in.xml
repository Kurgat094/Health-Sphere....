<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/whatsapp_grey"
    android:layout_height="match_parent"
    tools:context=".SignIn">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="50dp"
                android:id="@+id/backbtn"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/backbtn"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_back"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back"
                    android:textStyle="normal"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"
                    android:textSize="18dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:counterEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/et_emailAdress"
                        android:drawableLeft="@drawable/baseline_email_24"
                        android:hint="Email Adress"
                        android:textColorHint="@color/black"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="15dp"
                        android:drawablePadding="15dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    android:id="@+id/passLayout"
                    android:layout_marginBottom="15dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:counterEnabled="false">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/et_password"
                        android:drawableLeft="@drawable/baseline_lock_24"
                        android:hint="Password"
                        android:textColorHint="@color/black"
                        android:textStyle="bold"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:layout_marginTop="15dp"
                        android:drawablePadding="15dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                     android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textSize="20sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Forgot Password?"
                android:textColor="@color/blue_1"
                android:layout_centerInParent="true" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Sign In"
                    android:id="@+id/sign_up"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/accountbtn"
                    android:textSize="22sp"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="OR"
                    android:textSize="20sp"
                    android:textColor="@color/blue_1"
                    android:textStyle="bold"
                    android:background="@drawable/or_btn"
                    android:layout_marginTop="20dp"/>
                <Button
                    android:id="@+id/google"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/iconsgoogle"
                    android:text="Sign with google"
                    android:shadowColor="@color/black"
                    android:textColor="@color/blue_1"
                    android:padding="10dp"
                    android:backgroundTint="@color/white"
                    android:textSize="22sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New member?"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/direct_to_signUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up"
                        android:textStyle="bold"
                        android:textColor="@color/blue_1"
                        android:paddingLeft="10dp"
                        android:textSize="18sp"/>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>